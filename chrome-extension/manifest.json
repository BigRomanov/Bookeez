{
  "manifest_version": 2,
  "name": "BookeeZ",
  "version": "0.0.2",

  "description": "Social Bookmarking and Collaborative Learning",

  "permissions": [
    "bookmarks",
    "history",
    "storage", 
    "tabs", 
    "notifications",
    "http://*/"
  ],

  "background": {
    "scripts": ["js/lib/jquery-2.0.3.js", "js/lib/underscore.js","js/lib/URI.js","js/analyzer/mind.js", "js/background/background.js"]
  },

  // "chrome_url_overrides" : {
  //   "bookmarks": "app.html"
  // },

  "icons": {
    "128": "images/icons/icon_128.png",
    "16": "images/icons/icon_16.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/content_script/content_script.js"]
    }
  ],

  "browser_action": {
    "default_icon": {                    
      "19": "images/icons/icon_16.png",   
      "38": "images/icons/icon_16.png"    
    },
    "default_title": "BookeeZ",      // optional; shown in tooltip
    "default_popup": "popup.html"    
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}